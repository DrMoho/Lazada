@using Lazada.Models.Entities
@model Product

@{
    ViewData["Title"] = "lew lew ";
    Layout = "_Layout";
}

@if (Model != null)
{
    <div class="row my-5 ">
        <h2>Laz Mall</h2>
        <div class="card-container d-flex">


            <div class="card col-lg-2 ">
                <img class="card-img-top" src="" alt="Card image">
                <div class="card-body">
                    <h5 class="card title border-0">@Model.Name</h5>
                    <p class="hidden">Product ID: @Model.Id</p>
                    <p>Price: @Model.Price</p>
                    <p>Original Price: @Model.OrPrice</p>
                    <form asp-action="ProductDetails" asp-controller="Home" method="get" enctype="multipart/form-data">
                        <input name="Id" type="hidden" value="@Model.Id">
                        <button type="submit" class="btn btn-primary">Go somewhere</button>
                    </form>
                    <form asp-action="ProductDetails" asp-controller="Home" method="get" enctype="multipart/form-data">
                        <input name="Id" type="hidden" value="@Model.Id">
                        <button type="submit" class="btn btn-primary">Add to cart</button>

                    </form>

                </div>
            </div>

        </div>
    </div>

}
else
{
    <p>No products available.</p>
}