@using Lazada.Models
@model List<Products>

<h2>Shared Products Component</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="card-container d-flex">
            @foreach (var product in Model)
            {
                <div class="card col-lg-2 mx-2">
                    <img class="card-img-top" src="" alt="Card image">
                    <div class="card-body">
                        <h5 class="card title border-0">@product.ProductName</h5>
                        <p class="hidden">Product ID: @product.ProductId</p>
                        <p>Price: @product.Price</p>
                        <p>Original Price: @product.OrPrice</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            }
        </div>
    </div>

}
else
{
    <p>No products available.</p>
}
<style>
    .img-card {
        max-height: 200px;
        object-fit: contain;
    }
</style>