@using Lazada.Models
@model List<Products>

<h2>Shared Products Component</h2>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Original Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.OrPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}
